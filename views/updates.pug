doctype html
html
  head
    title= pageTitle
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      .content {
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .form-container {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        width: 300px;
        margin-top: 20px;
      }
      h1 {
        text-align: center;
        margin-bottom: 20px;
      }
      label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
      }
      input[type="text"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-sizing: border-box;
      }
      button[type="submit"] {
        width: 100%;
        background-color: #2986cc;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 10px;
        cursor: pointer;
      }
      button[type="submit"]:hover {
        background-color: #3d85c6;
      }
      a {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #2986cc;
        text-decoration: none;
      }
  body
    div.content
      h1 New Establishment Addition Form
      div.form-container
        form(action="/update-establishments" method="post")
          label(for="name") Establishment Name
          input(type="text" name="name")
          label(for="address") Address
          input(type="text" name="address")
          label(for="contact_person") Contact Person
          input(type="text" name="contact_person")
          label(for="email_address") Email Address
          input(type="text" name="email_address")
          label(for="establishment_type") Establishment Type
          input(type="text" name="establishment_type")
          button(type="submit") Add New Establishment
        a(href="/homepage-establishments") Return to the homepage